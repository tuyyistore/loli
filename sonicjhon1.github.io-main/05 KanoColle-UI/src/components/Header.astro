---
import KCIcon from "./KCIcon.astro";
import ProfileIcon from "./ProfileIcon.astro";
import SearchIcon from "./SearchIcon.astro";
---
<header>
    <div class="left">
        <a href="./index.html#">
            <KCIcon style="cursor: pointer;"/>
        </a>
    </div>
    <div class="right" style="display: flex; flex-direction: row;">
        <a href="./search.html">
            <div>
                <SearchIcon style="cursor: pointer;"/>
            </div>
        </a>
        <a onclick="HandleProfile()">
            <ProfileIcon style="cursor: pointer;"/>
        </a>
    </div>
</header>

<style>
    header {
        position: sticky;
        top: 0;
        z-index: 100;
        display: flex;
        height: 3rem;
        width: 100%;
        align-items: center;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        background: linear-gradient(0deg,#101014 28%,#17171d);
        padding: 0.25rem 0;
    }

    div {
        padding: 1.5rem;
    }

    .left {
        margin-left: unset;
    }

    .right {
        position: absolute;
        cursor: pointer;
        margin-right: unset;
        right: 1rem;
        align-items: center;
    }

</style>

<script is:raw>
    // Handle the Profile button.
    function HandleProfile() {
        // If the url doesn't contain "/profile".
        if (window.location.href.indexOf("/profile") == -1) {
            // Redirect to Profile page.
            window.location.href = "./profile"
        } else {
            // Else go back to home page.
            window.location.href = "./.."
        }
    }
</script>